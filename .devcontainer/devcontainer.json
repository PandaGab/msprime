{
  "name": "vsc-msprime",
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile",
    "args": {
      "UV_VERSION": "0.2.32",
      "PYTHON_VERSION": "3.12.4"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached",
  "mounts": [
    "type=bind,source=${localEnv:HOME}/.ssh,target=/root/.ssh,readonly"
  ],
  "postCreateCommand": "uv venv venv && uv pip install --python venv/bin/python --link-mode=copy -r requirements/development.txt -r requirements.local.txt && venv/bin/python setup.py build_ext --inplace && venv/bin/pre-commit install --install-hooks",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "christian-kohler.path-intellisense",
        "EditorConfig.EditorConfig"
      ],
      "settings": {
        "python.defaultInterpreterPath": "venv/bin/python",
        "python.testing.unittestEnabled": false,
        "python.testing.pytestEnabled": true,
        "path-intellisense.showHiddenFiles": false
      }
    }
  }
}